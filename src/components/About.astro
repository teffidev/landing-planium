---
// import { getRelativeLocaleUrl } from 'astro:i18n';
import { languageList } from 'src/i18n/ui';
import { useTranslations } from 'src/i18n/utils';

const currentLang = Astro.currentLocale;

const t = useTranslations(currentLang as keyof typeof languageList);
---

<section id="about" class="py-20 bg-white">
  <div class="container max-w-7xl mx-auto px-4 md:px-6 w-full">
    <div class="text-center mb-16" data-aos="fade-up">
      <h2 class="text-3xl md:text-4xl font-bold text-secondary mb-4">
        {t('about.title')}
      </h2>
      <div class="h-1 w-20 bg-primary mx-auto"></div>
    </div>

    <div class="flex flex-col md:flex-row items-center gap-12">
      <div class="md:w-1/2" data-aos="fade-right" data-aos-duration="1000">
        <img
          src="/images/preview.webp"
          alt="Planium Platform"
          class="rounded-xl"
        />
      </div>

      <div
        class="md:w-1/2"
        data-aos="fade-left"
        data-aos-duration="1000"
        data-aos-delay="200"
      >
        <h3 class="text-2xl font-bold text-secondary mb-4">
          {t('about.title2')}
        </h3>
        <p class="text-secondary mb-6">
          {t('about.subtitle')}
        </p>

        <div class="space-y-4">
          <div class="flex items-start gap-3">
            <div class="p-2 bg-secondary rounded-lg text-primary">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-6 w-6"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <div>
              <h4 class="font-semibold text-secondary">{t('about.item1')}</h4>
              <p class="text-secondary">
                {t('about.description1')}
              </p>
            </div>
          </div>

          <div class="flex items-start gap-3">
            <div class="p-2 bg-secondary rounded-lg text-primary">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-6 w-6"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M13 10V3L4 14h7v7l9-11h-7z"></path>
              </svg>
            </div>
            <div>
              <h4 class="font-semibold text-secondary">
                {t('about.item2')}
              </h4>
              <p class="text-secondary">
                {t('about.description2')}
              </p>
            </div>
          </div>

          <div class="flex items-start gap-3">
            <div class="p-2 bg-secondary rounded-lg text-primary">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-6 w-6"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"
                ></path>
              </svg>
            </div>
            <div>
              <h4 class="font-semibold text-secondary">{t('about.item3')}</h4>
              <p class="text-secondary">
                {t('about.description3')}
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
