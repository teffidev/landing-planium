---
// import { getRelativeLocaleUrl } from 'astro:i18n';
import { languageList } from 'src/i18n/ui';
import { useTranslations } from 'src/i18n/utils';

const currentLang = Astro.currentLocale;

const t = useTranslations(currentLang as keyof typeof languageList);
---

<section id="contact" class="py-20 bg-white">
  <div class="container max-w-7xl mx-auto px-4 md:px-6">
    <div class="text-center mb-16" data-aos="fade-up">
      <h2 class="text-3xl md:text-4xl font-bold text-secondary mb-4">
        {t('contact.title')}
      </h2>
      <div class="h-1 w-20 bg-primary mx-auto mb-6"></div>
      <p class="text-secondary max-w-3xl mx-auto">
        {t('contact.subtitle')}
      </p>
    </div>

    <div class="flex flex-col lg:flex-row gap-12 max-w-5xl mx-auto">
      <!-- Contact Information -->
      <div class="lg:w-2/5" data-aos="fade-right" data-aos-duration="1000">
        <div class="bg-gray-50 rounded-xl shadow-lg p-8 h-full">
          <h3 class="text-xl font-bold text-secondary mb-8">
            {t('contact.title2')}
          </h3>

          <div class="space-y-8">
            <div class="flex items-start gap-4">
              <div class="p-3 bg-secondary rounded-lg text-primary">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="h-6 w-6"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                  ></path>
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
              </div>
              <div>
                <h4 class="font-semibold text-secondary">
                  {t('contact.item1')}
                </h4>
                <p class="text-gray-600">
                  {t('contact.address')}
                </p>
              </div>
            </div>

            <div class="flex items-start gap-4">
              <div class="p-3 bg-secondary rounded-lg text-primary">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="h-6 w-6"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                  ></path>
                </svg>
              </div>
              <div>
                <h4 class="font-semibold text-secondary">
                  {t('contact.item2')}
                </h4>
                <p class="text-gray-600">{t('contact.phone')}</p>
              </div>
            </div>

            <div class="flex items-start gap-4">
              <div class="p-3 bg-secondary rounded-lg text-primary">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="h-6 w-6"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                  ></path>
                </svg>
              </div>
              <div>
                <h4 class="font-semibold text-secondary">
                  {t('contact.item3')}
                </h4>
                <p class="text-secondary">{t('contact.email')}</p>
              </div>
            </div>
          </div>

          <!-- Social Media Links -->
          <div class="mt-10">
            <h4 class="font-semibold text-secondary mb-4">
              {t('contact.links')}
            </h4>
            <div class="flex space-x-4">
              <a
                href="#"
                class="p-2 bg-primary/10 text-primary rounded-full hover:bg-primary hover:text-white transition-colors"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="h-5 w-5"
                  fill="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    d="M22.675 0h-21.35c-.732 0-1.325.593-1.325 1.325v21.351c0 .731.593 1.324 1.325 1.324h11.495v-9.294h-3.128v-3.622h3.128v-2.671c0-3.1 1.893-4.788 4.659-4.788 1.325 0 2.463.099 2.795.143v3.24l-1.918.001c-1.504 0-1.795.715-1.795 1.763v2.313h3.587l-.467 3.622h-3.12v9.293h6.116c.73 0 1.323-.593 1.323-1.325v-21.35c0-.732-.593-1.325-1.325-1.325z"
                  ></path>
                </svg>
              </a>
              <a
                href="#"
                class="p-2 bg-primary/10 text-primary rounded-full hover:bg-primary hover:text-white transition-colors"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="h-5 w-5"
                  fill="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    d="M12 0c-6.627 0-12 5.373-12 12s5.373 12 12 12 12-5.373 12-12-5.373-12-12-12zm6.066 9.645c.183 4.04-2.83 8.544-8.164 8.544-1.622 0-3.131-.476-4.402-1.291 1.524.18 3.045-.244 4.252-1.189-1.256-.023-2.317-.854-2.684-1.995.451.086.895.061 1.298-.049-1.381-.278-2.335-1.522-2.304-2.853.388.215.83.344 1.301.359-1.279-.855-1.641-2.544-.889-3.835 1.416 1.738 3.533 2.881 5.92 3.001-.419-1.796.944-3.527 2.799-3.527.825 0 1.572.349 2.096.907.654-.128 1.27-.368 1.824-.697-.215.671-.67 1.233-1.263 1.589.581-.07 1.135-.224 1.649-.453-.384.578-.87 1.084-1.433 1.489z"
                  ></path>
                </svg>
              </a>
              <a
                href="#"
                class="p-2 bg-primary/10 text-primary rounded-full hover:bg-primary hover:text-white transition-colors"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="h-5 w-5"
                  fill="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    d="M12 0c-6.627 0-12 5.373-12 12s5.373 12 12 12 12-5.373 12-12-5.373-12-12-12zm-2 16h-2v-6h2v6zm-1-6.891c-.607 0-1.1-.496-1.1-1.109 0-.612.492-1.109 1.1-1.109s1.1.497 1.1 1.109c0 .613-.493 1.109-1.1 1.109zm8 6.891h-1.998v-2.861c0-1.881-2.002-1.722-2.002 0v2.861h-2v-6h2v1.093c.872-1.616 4-1.736 4 1.548v3.359z"
                  ></path>
                </svg>
              </a>
              <a
                href="#"
                class="p-2 bg-primary/10 text-primary rounded-full hover:bg-primary hover:text-white transition-colors"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="h-5 w-5"
                  fill="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"
                  ></path>
                </svg>
              </a>
            </div>
          </div>
        </div>
      </div>

      <!-- Contact Form -->
      <div
        class="lg:w-3/5 border border-gray-100 rounded-lg shadow-lg"
        data-aos="fade-left"
        data-aos-duration="1000"
        data-aos-delay="200"
      >
        <div class="bg-white rounded-xl shadow-lg p-8">
          <h3 class="text-xl font-bold text-secondary mb-6">
            {t('form.title')}
          </h3>

          <form id="contact-form" class="space-y-6">
            <div>
              <label
                for="fullName"
                class="block text-sm font-medium text-secondary mb-1"
                >{t('form.name')}</label
              >
              <input
                type="text"
                id="fullName"
                name="fullName"
                required
                class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-primary focus:border-primary transition-colors outline-none text-sm"
                placeholder={t('form.nameInput')}
              />
            </div>

            <div>
              <label
                for="email"
                class="block text-sm font-medium text-secondary mb-1"
                >{t('form.email')}</label
              >
              <input
                type="email"
                id="email"
                name="email"
                required
                class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-primary focus:border-primary transition-colors outline-none text-sm"
                placeholder={t('form.emailInput')}
              />
            </div>

            <div>
              <label
                for="subject"
                class="block text-sm font-medium text-secondary mb-1"
                >{t('form.subject')}</label
              >
              <input
                type="text"
                id="subject"
                name="subject"
                required
                class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-primary focus:border-primary transition-colors outline-none text-sm"
                placeholder={t('form.subjectInput')}
              />
            </div>

            <div>
              <label
                for="message"
                class="block text-sm font-medium text-secondary mb-1"
                >{t('form.message')}</label
              >
              <textarea
                id="message"
                name="message"
                rows="5"
                required
                class="w-full text-sm px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-primary focus:border-primary transition-colors outline-none"
                placeholder={t('form.messageInput')}></textarea>
            </div>

            <div class="flex items-start gap-2">
              <input
                type="checkbox"
                id="privacy"
                name="privacy"
                required
                class="mt-1"
              />
              <label for="privacy" class="text-xs text-gray-600">
                {t('form.privacy')}
                <a href="#" class="text-primary hover:underline"
                  >{t('form.privacy2')}</a
                >
                {t('form.privacy3')}
              </label>
            </div>

            <button
              type="submit"
              class="w-full bg-primary text-secondary font-semibold py-3 px-6 rounded-lg hover:bg-yellow-500 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary transition-colors"
            >
              {t('form.button')}
            </button>
          </form>

          <div class="text-center mt-6 text-secondary text-sm">
            {t('form.message2')}
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  // Validar y procesar el formulario
  document.addEventListener('DOMContentLoaded', () => {
    const form = document.getElementById('contact-form') as HTMLFormElement;

    form?.addEventListener('submit', (e) => {
      e.preventDefault();

      // Simple validación
      const fullNameEl = document.getElementById(
        'fullName'
      ) as HTMLInputElement;
      const emailEl = document.getElementById('email') as HTMLInputElement;
      const messageEl = document.getElementById(
        'message'
      ) as HTMLTextAreaElement;

      if (!fullNameEl || !emailEl || !messageEl) return;

      const fullName = fullNameEl.value;
      const email = emailEl.value;
      const message = messageEl.value;

      if (!fullName || !email || !message) {
        alert('Por favor completa todos los campos requeridos.');
        return;
      }

      // Email simple validation
      const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
      if (!emailRegex.test(email)) {
        alert('Por favor ingresa un correo electrónico válido.');
        return;
      }

      // Aquí puedes agregar el código para enviar el formulario vía AJAX
      alert(
        '¡Gracias por contactarnos! Nos pondremos en contacto contigo pronto.'
      );
      form.reset();
    });
  });
</script>
